<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="PopupBackground" Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
    <SolidColorBrush x:Key="PopupForeground" Color="{DynamicResource {x:Static SystemColors.ControlTextColorKey}}"/>
    <SolidColorBrush x:Key="PopupHeader" Color="RoyalBlue"/>
    <SolidColorBrush x:Key="PopupRed" Color="DarkRed"/>
    <SolidColorBrush x:Key="PopupGreen" Color="DarkGreen"/>
</ResourceDictionary>